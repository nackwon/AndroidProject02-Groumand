<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kr.hkit.groumand204_02.Menu04Fragment">

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#000000"
            android:columnCount="3"
            android:rowCount="3">


        <ImageView
                android:id="@+id/viewResotto"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:background="#ffffffff"
                android:layout_rowWeight="1"
                android:scaleType="fitXY"/>

        <ImageView
                android:id="@+id/viewPasta"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_columnSpan="2"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_columnWeight="1"
                android:background="#ffffff"
                android:layout_marginBottom="2dp"
                android:layout_rowSpan="2"
                android:layout_rowWeight="1"
                android:scaleType="fitXY"/>

        <ImageView
                android:id="@+id/viewPizza"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:layout_rowWeight="1"
                android:scaleType="fitXY"/>

        <ImageView
                android:id="@+id/imageBeer"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_rowWeight="1"
                android:background="#ffffff"
                android:scaleType="fitXY"/>

        <ImageView
                android:id="@+id/viewZinAndBeverage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="2dp"
                android:background="#ffffff"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_rowWeight="1"
                android:scaleType="fitXY"/>

        <ImageView
                android:id="@+id/viewSalad"
                android:layout_width="130dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_height="130dp"
                android:background="#ffffff"
                android:layout_rowWeight="1"
                android:scaleType="fitXY"/>
    </GridLayout>
</RelativeLayout>
